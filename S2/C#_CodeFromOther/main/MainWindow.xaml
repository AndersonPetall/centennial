<Window x:Class="BMIcalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMIcalculator"
        mc:Ignorable="d"
        Title="BMI Claculator" Height="600" Width="732">
    <Grid Margin="0,0,0,11">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="664*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <!--show window-->
        <Grid Margin="0,0,5,330" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Label Content="BMI" FontWeight="Bold" Grid.Row="0"/>
            <DataGrid Name="dataBMI" Grid.Row="1" IsReadOnly="True" AutoGeneratedColumns="GenerateBMIColumns"/>
        </Grid>
        <!--Create-->
        <Grid Margin="0,10,5,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,10,5,0" Grid.Row="0" Grid.Column="0">
                <Label Content="Name"/>
                <TextBox Name="textName"/>
            </StackPanel>
            <StackPanel Margin="0,10,5,0" Grid.Row="0" Grid.Column="1">
                <Label Content="Date"/>
                <DatePicker Name="date"/>
            </StackPanel>
            <StackPanel Margin="0,10,5,0" Grid.Row="1" Grid.Column="0">
                <Label Content="Type"/>
                <ComboBox Name="comboType">
                    <ComboBoxItem Content="imperial inches/lbs"/>
                    <ComboBoxItem Content="metric  m/kg"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="0,10,5,0" Grid.Row="1" Grid.Column="1">
                <Label Content="Height"/>
                <TextBox Name="textHeight"/>
            </StackPanel>
            <StackPanel Margin="0,10,5,0" Grid.Row="2" Grid.Column="0">
                <Label Content="Weight"/>
                <TextBox Name="textWeight"/>
            </StackPanel>
            <StackPanel Margin="0,25,5,0" Grid.Row="3" Grid.Column="0" Grid.RowSpan="2">
                <Button Content="History" Name="btnHistory"/>
            </StackPanel>
            <StackPanel Margin="0,25,5,0" Grid.Row="3" Grid.Column="1" Grid.RowSpan="2">
                <Button Content="Search" Name="btnSearch"/>
            </StackPanel>
            <StackPanel Margin="0,25,5,0" Grid.Row="4" Grid.Column="0">
                <Button Content="Delete" Name="btnDelete"/>
            </StackPanel>

            <StackPanel Margin="0,25,5,0" Grid.Row="4" Grid.Column="1">
                <Button Content="change" Name="btnChange"/>
            </StackPanel>

            <StackPanel Margin="0,25,5,0" Grid.Row="5" Grid.Column="0">
                <Button Content="Calculate" Name="btnCalculate"/>
            </StackPanel>

            <StackPanel Margin="0,25,5,0" Grid.Row="5" Grid.Column="1">
                <Button Content="Reset" Name="btnReset"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
